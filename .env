# Student Course Enrollment System - Environment Variables
# Node.js 22+ loads this file natively with --env-file flag
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
# Just add [username]:[password]
DATABASE_URL="mysql://root:password@localhost:3306/student_enrollment_db"
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE

# JWT Configuration
JWT_SECRET=jwt_secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=jwt_refresh_secret
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Timezone
TZ=Asia/Kolkata

# Admin Default Credentials (for initial setup only)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=Admin@123456

# API Configuration
API_PREFIX=/api
API_TIMEOUT=30000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload (if needed in future)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf


# Security Headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Development/Debug
PRISMA_LOG_LEVEL=warn
MORGAN_FORMAT=dev
