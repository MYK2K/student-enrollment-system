{
  "env": {
    "es2024": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2024,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "only-multiline"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^(next|req|res|_)$" }],
    "no-console": "warn",
    "consistent-return": "off",
    "no-underscore-dangle": "off"
  }
}
